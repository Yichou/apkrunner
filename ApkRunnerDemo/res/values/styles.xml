<resources>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/_colorPrimary</item>
        <item name="colorPrimaryDark">@color/_colorPrimaryDark</item>
        <item name="colorAccent">@color/_colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/_colorPrimary</item>
    </style>
    
    <style name="AppDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorPrimary">@color/_colorPrimary</item>
        <item name="colorPrimaryDark">@color/_colorPrimaryDark</item>
        <item name="colorAccent">@color/_colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/_colorPrimary</item>
    </style>

</resources>
